class Solution {
    public int passThePillow(int n, int t)
     {
      int noc=t/(n-1);
      int d=0;
      int dpa=t%n;
      int div=t/n;
      if(div==0)
      return (1+t);
      if(noc%2==0)
      {
        t=t%(n-1);
        return (1+t);


      }
      else
      {
            t=t%(n-1);
            return (n-t);
      }

    }
}
